<h1>New game</h1>
<% @letters.each do |letter| %>
    <strong><%= letter.capitalize %></strong>
  <% end %>
<p>What is the longest word you can find?</p>
<form class="form-inline mx-sm-3 mb-4" action="score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text"class="form-control-file" placeholder="word" name="word">
  <input type="submit" class="btn btn-primary mb-2" placeholder="submit">
</form>
